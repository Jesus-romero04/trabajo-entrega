{{!-- Aqui estara la vista del carrito --}}

<div class="cartContainer">
        <ul class="productContain">
            {{#each cart}}
                <li class="cartProduct">
                    <div class="infoContain">
                        <img src={{this.thumbnails}} alt={{this.title}}>
                    </div>
                    <div class="infoContain">
                        <p><span class="font">Producto Id:</span> {{this.productId}}</p>
                        <p><span class="font">Titulo:</span> {{this.title}}</p>
                    </div>
                    <div class="infoContain">
                        <p><span class="font">Cantidad:</span> {{this.quantity}}</p>
                        <p><span class="font">Categoria:</span> {{this.category}}</p>
                        <p><span class="font">Precio por unidad:</span> ${{this.price}}</p>
                    </div>
                </li>
            {{/each}}
        </ul>

    <div>
        <button class="cleanCart">Borrar carrito</button>
    </div>
</div>

